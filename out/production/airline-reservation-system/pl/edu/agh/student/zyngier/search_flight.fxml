<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane prefHeight="400.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.edu.agh.student.zyngier.SearchFlightController">
   <children>
      <GridPane prefHeight="400.0" prefWidth="800.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <GridPane alignment="center" hgap="10" prefHeight="400.0" prefWidth="400.0" vgap="10">
               <columnConstraints>
                  <ColumnConstraints />
                  <ColumnConstraints />
                  <ColumnConstraints />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>
               <children>
                  <RadioButton fx:id="returnRadioButton" mnemonicParsing="false" onAction="#returnRadioButton" selected="true" text="Return" GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <toggleGroup>
                        <ToggleGroup fx:id="typeOfTripGroup" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="oneWayRadioButton" mnemonicParsing="false" onAction="#oneWayRadioButton" text="One way" toggleGroup="$typeOfTripGroup" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                  <ChoiceBox fx:id="departureAirportChoice" onAction="#departureAirportChoice" prefHeight="25.0" prefWidth="160.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <ChoiceBox fx:id="arrivalAirportChoice" onAction="#arrivalAirportChoice" prefHeight="25.0" prefWidth="160.0" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                  <DatePicker fx:id="flyOutDate" prefHeight="25.0" prefWidth="160.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <DatePicker fx:id="flyBackDate" prefHeight="25.0" prefWidth="160.0" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                  <Button onAction="#findFlightButton" mnemonicParsing="false" prefHeight="25.0" prefWidth="160.0" text="Fly" GridPane.columnIndex="2" GridPane.rowIndex="4" />
               </children>
            </GridPane>
            <GridPane GridPane.columnIndex="1">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <TableView fx:id="firstWayFlight" prefHeight="200.0" prefWidth="200.0">
                    <columns>
                      <TableColumn editable="false" prefWidth="75.0" resizable="false" sortable="false" text="From" />
                      <TableColumn editable="false" prefWidth="75.0" resizable="false" sortable="false" text="To" />
                        <TableColumn editable="false" prefWidth="75.0" resizable="false" sortable="false" />
                        <TableColumn editable="false" prefWidth="75.0" resizable="false" sortable="false" text="To" />
                        <TableColumn editable="false" prefWidth="75.0" resizable="false" sortable="false" text="Price" />
                    </columns>
                  </TableView>
               </children>
            </GridPane>
         </children>
      </GridPane>
   </children>
</AnchorPane>
